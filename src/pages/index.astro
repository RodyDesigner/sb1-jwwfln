---
import Layout from '../layouts/Layout.astro';
---

<Layout title="Bienvenido - Sistema de Autenticación">
  <main class="container mx-auto px-4 py-8">
    <h1 class="text-4xl font-bold mb-8 text-center">Bienvenido al Sistema de Autenticación</h1>
    <div class="flex justify-center space-x-4">
      <a href="/login" class="bg-primary hover:bg-primary-dark text-white font-bold py-2 px-4 rounded">
        Iniciar Sesión
      </a>
      <a href="/register" class="bg-secondary hover:bg-secondary-dark text-white font-bold py-2 px-4 rounded">
        Registrarse
      </a>
    </div>
  </main>
</Layout>